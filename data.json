{% extends "base.html" %}
{% block content %}

<h1>Buy Streaming Plans</h1>

<div class="grid">
    {% for plan in data.plans %}
    <div class="card">
        <img src="{{ url_for('static', filename='img/' + plan.logo) }}" alt="{{ plan.name }}" />
        <h3>{{ plan.name }}</h3>
        <p>{{ plan.desc }}</p>
        <p><b>â‚¹{{ plan.price }}</b></p>

        <a class="btn" href="/checkout?plan_id={{ plan.id }}">Buy Now</a>
    </div>
    {% endfor %}
</div>

{% endblock %}
